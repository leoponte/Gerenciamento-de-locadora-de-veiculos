<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#8B0000"
    android:layout_height="match_parent"
    tools:context="com.example.marcos.tcc.TelaInicial">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/logotopo" />

    <Button
        android:id="@+id/buttonReservar"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonConsultarVeiculos"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="#FFFF"
        android:text="Reserve um Carro"
        android:textColor="#000000" />

    <Button
        android:id="@+id/buttonConsultar"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonConsultarVeiculos"
        android:layout_alignEnd="@+id/buttonReservar"
        android:layout_gravity="center"
        android:layout_marginBottom="14dp"
        android:background="#FFFF"
        android:text="Minhas Reservas"
        android:textColor="#000000" />

    <Button
        android:id="@+id/buttonConsultarVeiculos"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonReservar"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="#FFFF"
        android:text="Consultar VeÃ­culos"
        android:textColor="#000000" />

    <Button
        android:id="@+id/buttonSobre"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="12dp"
        android:background="#FFFF"
        android:text="Sobre"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/buttonConsultar"
        android:layout_marginEnd="13dp"
        android:layout_toStartOf="@+id/buttonConsultar"
        app:srcCompat="@drawable/check" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/imageView17"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/loupe" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/buttonReservar"
        android:layout_alignEnd="@+id/imageView18"
        app:srcCompat="@drawable/car" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/buttonSobre"
        android:layout_marginEnd="11dp"
        android:layout_toStartOf="@+id/buttonSobre"
        app:srcCompat="@drawable/information" />


</RelativeLayout>

