<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8B0000"
    tools:context="com.example.marcos.tcc.TelaReserva">


    <ImageView
        android:layout_marginTop="25dp"
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logotopo" />

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/textView"
        android:textColor="#FFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Local de Retirada" />

    <Spinner
        android:id="@+id/spinnerLocalRetirada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView2"
        android:textColor="#FFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Local de Devolução" />

    <Spinner
        android:id="@+id/spinnerlocalDevolucao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/TextView3"
        android:textColor="#FFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retirada" />

    <Spinner
        android:id="@+id/spinnerRetirada"
        android:layout_width="90dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTextDataRetirada"
        android:layout_width="144dp"
        android:hint="dd/mm/aaaa"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/textView5"
        android:textColor="#FFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Devolução" />

    <Spinner
        android:id="@+id/spinnerDevolucao"
        android:layout_width="90dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTextDataDevolucao"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="dd/mm/aaaa"
        android:inputType="textPersonName" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/buttonAvancar"
        android:layout_gravity="center"
        android:textColor="#FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avançar" />
</LinearLayout>
