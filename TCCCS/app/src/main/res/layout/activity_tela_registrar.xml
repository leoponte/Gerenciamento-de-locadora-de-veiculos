<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8B0000"
    tools:context="com.example.marcos.tcc.TelaRegistrar">

    <ImageView
        android:layout_marginTop="25dp"
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logotopo" />

    <TextView
        android:layout_marginTop="90dp"
        android:id="@+id/textViewUsuario"
        android:layout_width="match_parent"
        android:textColor="#FFFF"
        android:layout_height="wrap_content"
        android:text="UsuÃ¡rio" />

    <EditText
        android:id="@+id/EtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
         />

    <TextView
        android:id="@+id/textViewSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Senha"
        android:textColor="#FFFF" />

    <EditText
        android:id="@+id/Editsenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textViewConfirmaSenha"
        android:layout_width="match_parent"
        android:textColor="#FFFF"
        android:layout_height="wrap_content"
        android:text="Confirmar Senha" />

    <EditText
        android:id="@+id/EditsenhaC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonRegistra"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFFF"
        android:text="Registrar"
        android:textColor="#000000" />


</LinearLayout>
