<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#8B0000"
    android:layout_height="match_parent"
    tools:context="com.example.marcos.tcc.TelaVeiculos">

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logotopo" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView12"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView6"
        app:srcCompat="@drawable/palio" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView13"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/uno" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="21dp"
        app:srcCompat="@drawable/gol" />

    <TextView

        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView6"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/imageView11"
        android:text="Comprimento – 3875 mm
Largura – 1670 mm
Altura – 1513 mm
Peso (kg) – 940
Capacidade do porta-malas – 280L
Motor 1.0"
        android:textColor="#FFFF" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/imageView12"
        android:text="Comprimento – 3.810 mm
Largura – 1.636 mm
Altura – 1.480 mm
Peso (kg) – 1010
Capacidade do porta-malas – 290L
Motor 1.0"
        android:textColor="#FFFF" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignTop="@+id/imageView13"

        android:text="Comprimento – 3.895 mm
Largura – 1.893 mm
Altura – 1.464 mm
Peso (kg) – 1020
Capacidade do porta-malas – 270L
Motor 1.0"
        android:textColor="#FFFF" />


</RelativeLayout>
